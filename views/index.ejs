<script>
function whatif() {

//url localhost:3000/whatif?amountXXX&dateXXX

  var amount = $("#amount").val();
  var date = $("#start").val();
  //$("#results").html(amount+" "+date);
  var url = "/whatif"
  url += "?amount=" + amount;
 url += "&date=" + encodeURIComponent(date);
  $.ajax({
    url: url,
    amount: JSON.stringify(amount)
  }).done(function(data){
    console.log(data);
    $('#results').html(data);
  })
};


var ctx = document.getElementById("myChart");
