<script>
  function whatifBTC() {

//url localhost:3000/whatif?amountXXX&dateXXX

var amount = $("#amount").val();
var date = $("#start").val();
  //$("#results").html(amount+" "+date);
  var url = "/whatifBTC"
  url += "?amount=" + amount;
  url += "&date=" + encodeURIComponent(date);
  $.ajax({
    url: url,
  }).done(function(data){
    console.log(data);
